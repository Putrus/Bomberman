
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/bin/g++",
			"args": [
				"--std=c++17",
				"-Wall",
				"-O0",
				"-g",
				"main.cpp",
				"-o",
				"server"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /bin/g++"
		}
	]
}